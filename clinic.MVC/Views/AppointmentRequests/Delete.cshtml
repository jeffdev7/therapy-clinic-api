@using clinic.CrossCutting.Dto
@model AppointmentRequestViewModel

@{
    ViewData["Title"] = "Delete";
}
<br />

<h4>Tem certeza que deseja excluir este agendamento?</h4>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>

        <dt class = "col-sm-2">
            Número de celular
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone.Number)
        </dd>
        <dt class="col-sm-2">
            Horário desejado
        </dt>
        <dd class="col-sm-10">
            @Model.RequestedTime.Start.ToString("dd/MM/yyyy HH:mm") - @Model.RequestedTime.End.ToString("HH:mm")
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
    </form>
</div>
